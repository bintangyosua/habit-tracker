// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

model Role {
  id    Int            @id @default(autoincrement())
  name  String
  users UsersOnRoles[]
}

model User {
  id            Int             @id @default(autoincrement())
  nama          String
  email         String          @unique
  password      String
  tanggal_lahir DateTime
  kota          String
  roles         UsersOnRoles[]
  habits        UsersOnHabits[]
}

model UsersOnRoles {
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  role       Role     @relation(fields: [roleId], references: [id])
  roleId     Int
  assignedAt DateTime @default(now())

  @@id([userId, roleId])
}

model Kategori {
  id     Int     @id @default(autoincrement())
  nama   String
  habits Habit[]
}

model Habit {
  id          Int             @id @default(autoincrement())
  nama        String
  kategori    Kategori        @relation(fields: [kategori_id], references: [id])
  kategori_id Int
  users       UsersOnHabits[]
}

model UsersOnHabits {
  user    User  @relation(fields: [userId], references: [id])
  userId  Int
  habit   Habit @relation(fields: [habitId], references: [id])
  habitId Int

  @@id([userId, habitId])
}
